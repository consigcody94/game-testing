[sub_resource type="GDScript" id="GDScript_1"]
script/source = "extends CanvasLayer
## HUD - Heads Up Display
##
## Shows:
## - Interaction prompts
## - Crosshair
## - Stamina bar (when depleted)
## - Frost overlay effect

@onready var interaction_label: Label = $InteractionPrompt
@onready var crosshair: Control = $Crosshair
@onready var stamina_bar: ProgressBar = $StaminaBar
@onready var frost_overlay: ColorRect = $FrostOverlay

var frost_amount := 0.0
var target_frost := 0.0


func _ready() -> void:
	# Connect to GameManager signals
	GameManager.prompt_changed.connect(_on_prompt_changed)

	# Find anomaly controller and connect
	var anomaly = get_tree().get_first_node_in_group(\"anomaly_controller\")
	if anomaly:
		anomaly.anomaly_started.connect(_on_anomaly_started)
		anomaly.anomaly_ended.connect(_on_anomaly_ended)

	interaction_label.visible = false
	stamina_bar.visible = false
	frost_overlay.modulate.a = 0


func _process(delta: float) -> void:
	# Update frost effect
	frost_amount = lerp(frost_amount, target_frost, delta * 2.0)
	frost_overlay.modulate.a = frost_amount * 0.6

	# Update stamina bar
	var player = get_tree().get_first_node_in_group(\"player\")
	if player and player.has_method(\"get_stamina_percent\"):
		var stamina = player.get_stamina_percent()
		if stamina < 1.0:
			stamina_bar.visible = true
			stamina_bar.value = stamina * 100
		else:
			stamina_bar.visible = false


func _on_prompt_changed(text: String, visible: bool) -> void:
	interaction_label.text = \"[E] \" + text if text else \"\"
	interaction_label.visible = visible


func _on_anomaly_started(type: String) -> void:
	if type == \"cold\":
		target_frost = 1.0


func _on_anomaly_ended(type: String) -> void:
	if type == \"cold\":
		target_frost = 0.0
"

